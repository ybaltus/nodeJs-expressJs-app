<%- include('../template/header'); %>
<nav aria-label="breadcrumb" >
    <ol class="breadcrumb" style="background-color: white">
        <li class="breadcrumb-item"><a href="http://localhost:4000/" title="Accueil">Accueil</a></li>
        <li class="breadcrumb-item"><a href="http://localhost:4000/agence/annonces" title="Gérer les annonces">Gérer les annonces</a></li>
        <li class="breadcrumb-item"><a>Éditer une annonce</a></li>
    </ol>
</nav>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Éditer une annonce</h1>
        <p class="lead">Modifiez une annonce.</p>
    </div>
</div>
<div class="row">
    <form class="col-12">
        <div class="form-row">
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Titre</label>
                <input type="text" class="form-control" id="titre" value="<%= estateAd.titre %>">
            </div>
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Prix (&euro;)</label>
                <input type="text" class="form-control" id="price" value="<%= estateAd.price %>">
            </div>
            <div class="form-group col-12">
                <label for="exampleFormControlInput1">Adresse</label>
                <input type="text" class="form-control" id="adresse" value="<%= estateAd.adresse %>">
            </div>
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Code postal</label>
                <input type="text" class="form-control" id="code_postal" value="<%= estateAd.code_postal %>">
            </div>
            <div class="form-group col-6">
                <label for="exampleFormControlInput1">Ville</label>
                <input type="text" class="form-control" id="ville" value="<%= estateAd.ville %>">
            </div>
            <div class="form-group col-12">
                <label for="exampleFormControlInput1">Description</label>
<!--                <input type="text" class="form-control" id="description" value="<%= estateAd.description %>">-->
                <textarea class="form-control" id="description">"<%= estateAd.description %>"</textarea>
            </div>
            <button type="submit" class="btn btn-success col-12 mb-3" onclick="editImmo('annonce', '<%= estateAd._id %>')"><i class="bi bi-save"></i> Éditer l'annonce</button>
        </div>
    </form>
</div>
<div class="d-md-flex justify-content-md-end">
    <a class="btn btn-secondary me-md-2" href="http://localhost:4000/agence/annonces" title="Retour">Retour</a>
</div>
<%- include('../template/footer'); %>
