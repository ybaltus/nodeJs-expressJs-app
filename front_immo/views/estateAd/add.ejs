<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Ajouter une annonce</h1>
        <p class="lead">Créez une nouvel annonce.</p>
    </div>
</div>
<div class="row">
    <form class="col-12">
        <div class="form-row">
            <div class="form-group col-6">
                <label for="titre">Titre</label>
                <input type="text" class="form-control" id="titre" placeholder="Appartement 5 pièces..." required>
            </div>
            <div class="form-group col-6">
                <label for="price">Prix (&euro;)</label>
                <input type="text" class="form-control" id="price" value="100000" required>
            </div>
            <div class="form-group col-12">
                <label for="adresse">Adresse</label>
                <input type="text" class="form-control" id="adresse" placeholder="1 avenue des champs élysées" required>
            </div>
            <div class="form-group col-6">
                <label for="code_postal">Code postal</label>
                <input type="text" class="form-control" id="code_postal" placeholder="75000" required>
            </div>
            <div class="form-group col-6">
                <label for="ville">Ville</label>
                <input type="text" class="form-control" id="ville" placeholder="Paris" required>
            </div>

            <div class="form-group col-12">
                <label for="description">Description</label>
<!--                <input type="text" class="form-control" id="description" placeholder="Très calme..." required>-->
                <textarea  class="form-control" id="description" placeholder="Très calme..." required></textarea>
            </div>
            <button type="submit" class="btn btn-success col-12 mb-3" onclick="createImmo('annonce')"><i class="bi bi-save"></i> Créer une annonce</button>
        </div>
    </form>
</div>
<div class="d-md-flex justify-content-md-end">
    <a class="btn btn-secondary me-md-2" href="http://localhost:4000/agence/annonces" title="Retour">Retour</a>
</div>
